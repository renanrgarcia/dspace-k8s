# DSpace 9 Docker Configuration Example
# Copy this file to .env and customize as needed

# DSpace Backend Configuration
DSPACE_VERSION=9.0
DSPACE_HOST=localhost
DSPACE_PORT=8080
DSPACE_NAME="DSpace Repository"

# Database Configuration
POSTGRES_DB=dspace
POSTGRES_USER=dspace
POSTGRES_PASSWORD=dspace
POSTGRES_PORT=5432
POSTGRES_HOST=dspace-db

# Solr Configuration
SOLR_PORT=8983
SOLR_HOST=dspace-solr

# Admin Account (change for production!)
ADMIN_EMAIL=admin@dspace.org
ADMIN_PASSWORD=admin
ADMIN_FIRST_NAME=DSpace
ADMIN_LAST_NAME=Administrator

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:4200

# Email Configuration (optional - for production)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_FROM=noreply@yourdomain.com

# Java Memory Settings
JAVA_OPTS="-Xmx2g -Xms1g -XX:+UseG1GC"

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=true
